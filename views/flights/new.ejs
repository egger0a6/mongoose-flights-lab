<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="post">
    <label for="airline-select">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flight-no-input">Flight Number (between 10 and 9999):</label>
    <input type="number" name="flightNo" id="flight-no-input" min="10" max="9999">
    <label for="departs-input">Departs:</label>
    <input
      type="datetime-local"
      name="departs"
      id="departs-input"
      <%# set default value of date input to one year from current UTC time %>
      <% let date = new Date(Date.now() + (365*24*60*60000)).toISOString().slice(0, 16) %>
      value="<%= date %>"
    >
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>